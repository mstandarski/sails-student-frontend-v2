<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Major Class</h2>
<button class="btn btn-success" id="addMajorClassButton">Add Major/Class</button>
<table class="table table-striped table-bordered" id="major_class_table" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Major</th>
      <th>Class</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof majorclass != "undefined" && majorclass.length > 0){ %>
    <% majorclass.forEach(function(item){ %>
      <tr>
        <td><%= item.major_class_id %></td>
        <td><%= item.major_id %></td>
        <td><%= item.class_id %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-major_class_id="<%= item.major_class_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButton" data-major_class_id="<%= item.major_class_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_major_class" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="major_class_id">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageMajorClassForm">
  <input type="hidden" name="major_class_id">
  <div class="form-group">
    <label for="major_id" class="col-sm-2 control-label">Major ID</label>
    <div class="col-sm-10">
      <input type="integer" class="form-control" id="major_id" name="major_id" placeholder="Major ID" required>
    </div>
  </div>
  <div class="form-group">
    <label for="class_id" class="col-sm-2 control-label">Class ID</label>
    <div class="col-sm-10">
      <input type="integer" class="form-control" id="class_id" name="class_id" placeholder="Class ID" required>
    </div>
  </div>
  </form>
